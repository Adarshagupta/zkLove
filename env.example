# zkLove Environment Configuration
# Copy this file to .env and fill in your actual values

# ============ BLOCKCHAIN CONFIGURATION ============

# Private key for deploying contracts (keep secure!)
PRIVATE_KEY=your_wallet_private_key_here

# RPC URLs for different networks
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Infura Project ID (for Ethereum networks)
INFURA_PROJECT_ID=your_infura_project_id

# Block explorer API keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# ============ APP CONFIGURATION ============

# App environment
NODE_ENV=development

# API endpoints
API_BASE_URL=https://api.zklove.app
WEBSOCKET_URL=wss://ws.zklove.app

# ============ MOPRO CONFIGURATION ============

# Mopro SDK configuration
MOPRO_API_KEY=your_mopro_api_key
MOPRO_CIRCUIT_BASE_URL=https://circuits.zklove.app

# Circuit artifact URLs
REGISTRATION_CIRCUIT_URL=https://circuits.zklove.app/registration.wasm
MATCHING_CIRCUIT_URL=https://circuits.zklove.app/matching.wasm
UNLOCK_CIRCUIT_URL=https://circuits.zklove.app/unlock.wasm

# Verification keys
REGISTRATION_VKEY_URL=https://circuits.zklove.app/registration_vkey.json
MATCHING_VKEY_URL=https://circuits.zklove.app/matching_vkey.json
UNLOCK_VKEY_URL=https://circuits.zklove.app/unlock_vkey.json

# ============ IPFS CONFIGURATION ============

# IPFS gateway for metadata storage
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud
PINATA_JWT_TOKEN=your_pinata_jwt_token

# ============ WALLET CONFIGURATION ============

# WalletConnect Project ID
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Coinbase Wallet configuration
COINBASE_WALLET_APP_NAME=zkLove
COINBASE_WALLET_APP_URL=https://zklove.app

# ============ ANALYTICS & MONITORING ============

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Error tracking
SENTRY_DSN=your_sentry_dsn

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# ============ PUSH NOTIFICATIONS ============

# Firebase configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ============ DEVELOPMENT ============

# Gas reporting
REPORT_GAS=true

# Debug mode
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Local development
LOCAL_HARDHAT_URL=http://127.0.0.1:8545
LOCAL_HARDHAT_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ============ SECURITY ============

# JWT secret for API authentication
JWT_SECRET=your_jwt_secret_key

# Encryption keys for local storage
LOCAL_STORAGE_ENCRYPTION_KEY=your_local_encryption_key

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
